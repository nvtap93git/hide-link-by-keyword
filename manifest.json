{
    "manifest_version": 3,
    "name": "Link Hider by Keyword",
    "version": "1.0",
    "description": "Hide links that contain user-defined keywords.",
    "permissions": ["storage", "scripting", "activeTab"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
